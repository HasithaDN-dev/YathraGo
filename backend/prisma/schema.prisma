model ChildPayment {
  id            Int  @id @default(autoincrement())
  rideRequestId Int? // link to ChildRideRequest when created from request
  childId       Int
  driverId      Int
  customerId    Int

  paymentMonth Int
  paymentYear  Int

  baseMonthlyPrice  Float
  isAdjusted        Boolean   @default(false)
  adjustmentPercent Float?
  adjustedPrice     Float?
  adjustmentReason  String?
  adjustmentDate    DateTime?

  finalPrice    Float
  amountPaid    Float              @default(0)
  paymentStatus ChildPaymentStatus @default(NOT_DUE)

  // store payment events (multiple payments in one day etc.)
  paymentEvents Json?

  dueDate            DateTime?
  gracePeriodEndDate DateTime?

  // add these fields:
  paymentMethod      String?
  transactionRef     String?

  carryForwardDue Float @default(0)

  Prepaid Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  child    Child    @relation(fields: [childId], references: [child_id])
  driver   Driver   @relation(fields: [driverId], references: [driver_id])
  customer Customer @relation(fields: [customerId], references: [customer_id])

  @@unique([childId, paymentYear, paymentMonth], name: "unique_child_month")
  @@index([driverId, paymentYear, paymentMonth])
  @@index([customerId])
}is

enum ChildPaymentStatus {
  NOT_DUE
  PENDING
  PAID
  OVERDUE
  GRACE_PERIOD
  CANCELLED
}

enum UserTypes {
  CUSTOMER
  CHILD
  STAFF
  WEBUSER
  BACKUPDRIVER
  DRIVER
  VEHICLEOWNER
}

enum MessageStatus {
  SENT
  DELIVERED
  SEEN
}

// Waypoint type for route stops
enum WaypointType {
  PICKUP
  DROPOFF
}

enum NotificationTypes {
  System
  Alert
  Other
  Chat
}

enum Ridetype {
  School
  Work
  Both
}
